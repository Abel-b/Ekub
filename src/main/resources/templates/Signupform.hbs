{{#partial "content"}}

<div id="signup">
    <div class="container-fluid" id="signup1">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body"  id="signform">
                        <h5 class="card-title text-center">Sign Up <i class="fa fa-cog fa-spin" style="font-size:24px"></i></h5>
                        <form class="form-signin" action="/signup">
                            <div class="form-label-group">
                                <label for="Username">Username</label>
                                <input type="Username" id="Username" class="form-control" placeholder="Username" required autofocus>
                            </div>

                            <div class="form-label-group">
                                <label for="email">email</label>
                                <input type="email" id="email" class="form-control" placeholder="email" required autofocus>
                            </div>

                            <div class="form-label-group">
                                <label for="phonenumber">Phone number</label>
                                <input type="phonenumber" id="phonenumber" class="form-control" placeholder="phonenumber" required autofocus>
                            </div>

                            <div class="form-label-group">
                                <label for="Password">Password</label>
                                <input type="Password" id="Password" class="form-control" placeholder="Password" required autofocus>
                            </div><br>

                            <button id="contactbtn" class="btn btn-lg btn-primary btn-block text-uppercase" type="submit"><span>Sign in</span></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br><br>
</div>
{{/partial}}

